<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    android:divider="@drawable/send_talk_pop_window_divier_line"    android:showDividers="middle"    >    <LinearLayout        android:id="@+id/bud_cur_ll1"        android:clickable="true"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_margin="10dp"        >        <ImageView            android:layout_width="50dp"            android:layout_height="50dp"            android:src="@drawable/buddpic"            android:scaleType="centerCrop"            />        <TextView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:singleLine="true"            android:textSize="18sp"            android:textColor="#000"            android:paddingLeft="20dp"            android:layout_gravity="center"            android:gravity="clip_vertical"            android:text="佛教简介"            />    </LinearLayout>    <LinearLayout        android:id="@+id/bud_cur_ll2"        android:clickable="true"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_margin="10dp"        >        <ImageView            android:layout_width="50dp"            android:layout_height="50dp"            android:src="@drawable/temple_bs_legend_culture1"            android:scaleType="centerCrop"            />        <TextView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:singleLine="true"            android:textSize="18sp"            android:textColor="#000"            android:paddingLeft="20dp"            android:layout_gravity="center"            android:gravity="clip_vertical"            android:text="信教行为过程"            />    </LinearLayout>    <LinearLayout        android:id="@+id/bud_cur_ll3"        android:clickable="true"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_margin="10dp">        <ImageView            android:layout_width="50dp"            android:layout_height="50dp"            android:src="@drawable/temple_bs_legend_culture2"            android:scaleType="centerCrop"            />        <TextView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:singleLine="true"            android:textSize="18sp"            android:textColor="#000"            android:paddingLeft="20dp"            android:layout_gravity="center"            android:gravity="clip_vertical"            android:text="佛教术语"            />    </LinearLayout>    <LinearLayout        android:id="@+id/bud_cur_ll4"        android:clickable="true"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_margin="10dp">        <ImageView            android:layout_width="50dp"            android:layout_height="50dp"            android:src="@drawable/temple_bs_legend_culture3"            android:scaleType="centerCrop"            />        <TextView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:singleLine="true"            android:textSize="18sp"            android:textColor="#000"            android:paddingLeft="20dp"            android:layout_gravity="center"            android:gravity="clip_vertical"            android:text="文殊菩萨"            />    </LinearLayout>    <LinearLayout        android:id="@+id/bud_cur_ll5"        android:clickable="true"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_margin="10dp"        >        <ImageView            android:layout_width="50dp"            android:layout_height="50dp"            android:src="@drawable/temple_bs_legend_culture4"            android:scaleType="centerCrop"            />        <TextView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:singleLine="true"            android:textSize="18sp"            android:textColor="#000"            android:paddingLeft="20dp"            android:layout_gravity="center"            android:gravity="clip_vertical"            android:text="药师佛"            />    </LinearLayout></LinearLayout>